<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin.css">
<%- include('../includes/title.ejs') %>

<%- include('../includes/nav.ejs') %>

<%- include('../includes/functions.ejs') %>

<form action="" method="post" id="add-coffee">
    <input class="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="segment">
        <label for="userid">User ID: </label>
        <input type="text" id="userid" name="userid" style="width: 200px" required>
    </div>
    <div class="segment">
        <label for="date">Datum: </label>
        <input type="date" id="date" name="date" style="width: 100px" required><br>
    </div>
    <div class="segment">
        <label for="amount">Anzahl Tassen: </label>
        <input type="number" id="amount" name="amount" style="width: 50px" required>
    </div>
    <button type="submit" class="button payment">abschicken</button>
</form>

<script>
    const userId = document.getElementById("userid");
    const form = document.getElementById("add-coffee");

    userId.addEventListener("change", () => {
      form.action = `/admin/add-coffee/${userId.value}`;
      console.log(userId.value);
    });
</script>

<%- include('../includes/end.ejs') %>
